
@model List<Service>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service table</h4>
           <a asp-action="Create" asp-controller="Service" class="btn btn-inverse-warning">Create service</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                               Service Image
                            </th>
                            <th>
                              Service Name
                            </th>
                            <th>
                               Service Description
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="width:150px;height:150px;" src="~/assets/img/@item.Image" alt="" class="img-fluid">
                                </td>
                                <td>
                                   @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a asp-action="Update" asp-controller="Service" asp-route-id="@item.Id" class=" btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                                    <a asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id" class=" btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>